#!/usr/bin/env bash

mkdir -p ~/bin
mkdir -p ~/.config
mkdir -p ~/.vim

ln -sf ~/code/dotFiles/bash_profile ~/.bash_profile
ln -sf ~/code/dotFiles/bash_colors ~/.bash_colors
ln -sf ~/code/dotFiles/bash_functions ~/.bash_functions
ln -sf ~/code/dotFiles/vimrc ~/.vimrc
ln -sf ~/code/dotFiles/gitconfig ~/.gitconfig
ln -sf ~/code/dotFiles/gitignore_global ~/.gitignore_global
ln -sf ~/code/dotFiles/ackrc ~/.ackrc
ln -sf ~/code/dotFiles/jshintrc ~/.jshintrc
ln -sf ~/code/dotFiles/tmux.conf ~/.tmux.conf
ln -sf ~/code/dotFiles/git_diff_wrapper ~/bin/git_diff_wrapper
ln -sf ~/code/dotFiles/ploy_sync ~/bin/8888
ln -sf ~/code/dotFiles/powerline ~/.config/
ln -sf ~/code/dotFiles/vim/colors ~/.vim/

source ~/.bash_profile
vim +BundleInstall +qall
