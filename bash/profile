#! /usr/bin/env bash

HISTSIZE=10000

PATH=/usr/local/sbin:$PATH
PATH=~/bin:$PATH
PATH=/usr/local/share/python:$PATH

if [ -d "$HOME/tools/android-sdk-macosx" ]; then
	PATH=~/tools/android-sdk-macosx/platform-tools:$PATH
	PATH=~/tools/android-sdk-macosx/tools:$PATH
fi

export PATH="/usr/local/heroku/bin:$PATH"
export EDITOR='vim'


function __runIfPresent(){
	[[ -s "$1" ]] && source "$1";
}
for file in ~/.bash_*; do
	if [[ ! $file =~ bash_profile|bash_history$ ]]; then
		__runIfPresent "$file"
	fi
done

__runIfPresent "$HOME/.rvm/scripts/rvm"
__runIfPresent "$HOME/code/dotFiles/anx-api/init"
