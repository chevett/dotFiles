#! /usr/bin/env bash

HISTSIZE=10000

PATH=/usr/local/sbin:$PATH
PATH=~/bin:$PATH
PATH=/usr/local/share/python:$PATH

function is_osx()
{
	test $(uname | tr -d '\n') = 'Darwin';
}
export -f is_osx

if [ -d "$HOME/tools/android-sdk" ]; then
	PATH=~/tools/android-sdk/platform-tools:$PATH
	PATH=~/tools/android-sdk/tools:$PATH
fi

export PATH="/usr/local/heroku/bin:$PATH"
export EDITOR='vim'
export JAVA_HOME=/usr/lib/jvm/java-1.7.0-openjdk-amd64

function __runIfPresent(){
	[[ -s "$1" ]] && source "$1";
}
for file in ~/.bash_*; do
	if [[ ! $file =~ bash_profile|bash_history$ ]]; then
	echo "hi: $file"
		__runIfPresent "$file"
	fi
done

__runIfPresent "$HOME/.rvm/scripts/rvm"
__runIfPresent "$HOME/code/dotFiles/anx-api/init"
