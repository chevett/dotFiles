#! /usr/bin/env bash

HISTSIZE=10000
export EDITOR='vim'

set -o vi

PATH=/usr/local/sbin:$PATH
PATH=~/bin:$PATH
PATH=/usr/local/share/python:$PATH

if [ -d "$HOME/tools/android-sdk" ]; then
	PATH=~/tools/android-sdk/platform-tools:$PATH
	PATH=~/tools/android-sdk/tools:$PATH
fi

export JAVA_HOME=/usr/lib/jvm/java0.7.0-openjdk-amd64

function __runIfPresent(){
	[[ -s "$1" ]] && source "$1";
}
for file in ~/.bash_*; do
	if [[ ! $file =~ bash_profile|bash_history$ ]]; then
		__runIfPresent "$file"
	fi
done


